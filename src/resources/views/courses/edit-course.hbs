<div class="container m-4 col-sm6 col-lg-4">
    <h3>Cập nhật khóa học</h3>
    <form method="post" action="/course/{{course._id}}?_method=PUT">
        <div class="form-group m-2">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group m-2">
            <label for="disc">Mô tả khóa học</label>
            <textarea name="disc" id="disc" cols="30" rows="5">{{course.disc}}</textarea>

        </div>
        <div class="form-group m-2">
            <label for="slugId">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>