<div class="container m-4 col-sm6 col-lg-4">
    <form method="post" action="/course/store">
        <div class="form-group m-2">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group m-2">
            <label for="disc">Mô tả khóa học</label>
            <input type="text" class="form-control" id="disc" name="disc">
        </div>
        <div class="form-group m-2">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Nhập khóa học</button>
    </form>
</div>